extends layout

block content
    table(border="1", cellspacing="0", cellpadding="5")
        thead
            tr
                td №
                td ФИО
                td Тип документа
                td Серия номер
                td Дата выдачи
        tbody
            each person in persons
                tr
                    td(rowspan="#{person.documents.length}") #{person.id}
                    td(rowspan="#{person.documents.length}") #{person.fullName}
                        each doc, index in person.documents
                            if index === 0
                                td #{doc.doctype.name}
                                td #{doc.serial} #{doc.number}
                                td #{doc.releaseDate}
                            else
                                tr
                                    td #{doc.doctype.name}
                                    td #{doc.serial} #{doc.number}
                                    td #{doc.releaseDate}